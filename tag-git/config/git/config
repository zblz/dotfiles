[core]
  excludesfile = ~/.config/git/ignore
  fsmonitor = true
  untrackedCache = true
  pager = delta

[interactive]
diffFilter = delta --color-only

[commit]
  verbose = true
  gpgsign = true

[pull]
  rebase = true

[push]
  default = simple
  followTags = true
  autoSetupRemote = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[rerere]
  enabled = true
  autoupdate = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[tag]
  sort = version:refname

[branch]
  sort = committerdate

[column]
  ui = auto

[merge]
  tool = nvimdiff
  conflictstyle = zdiff3

[mergetool]
  prompt = true
  conflictstyle = zdiff3

[mergetool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c '$wincmd w' -c 'wincmd J'"

[diff]
  algorithm = histogram
  colorMoved = true
  mnemonicPrefix = true
  renames = true
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pager]
  difftool = true

[help]
  autocorrect = prompt

[delta]
  navigate = true
  side-by-side = true
  line-numbers = true
  syntax-theme = gruvbox-dark
  dark = true
  diff-so-fancy = true

[alias]
  last = log -1 HEAD
  visual = !gitg
  latexdiff = !scm-latexdiff
  g = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  gs = g --simplify-by-decoration

  # one-line log
  l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

  a = add
  c = commit
  cm = commit -m

  d = diff
  ds = diff --stat
  dc = diff --cached

  s = status -s
  co = checkout
  cob = checkout -b
  # list branches sorted by last modified
  b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

  # list aliases
  la = "!git config -l | grep alias | cut -c 7-"

  dft = difftool

[diff "jupyternotebook"]
  command = git-nbdiffdriver diff

[merge "jupyternotebook"]
  name = jupyter notebook merge driver
  driver = git-nbmergedriver merge %O %A %B %L %P

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
