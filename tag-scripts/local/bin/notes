#!/bin/bash
shopt -s extglob
set -e

NOTES_DIR="$HOME/Dropbox/notes"

CWD=$PWD

trap "cd $PWD" EXIT

cd $NOTES_DIR

case $1 in
    n?(ew))
        shift
        STUB=""
        if [ "$*" != "" ]; then
            STUB=-$(echo "$@" | sed 's/ /-/g')
        fi
        DATE=$(date +%y%m%d)
        FILENAME=$DATE$STUB.md
        nvim $FILENAME
        ;;
    t?(odo))
        nvim todo.md
        ;;
    c?(ommit))
        git commit -a -v
        ;;
    *)
        nvim +PickerEdit
        ;;
esac
